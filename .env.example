# Database Configuration
DATABASE_URL="postgresql://erp_user:erp_password@localhost:5432/erp_main"
REDIS_URL="redis://localhost:6379"
MONGODB_URL="mongodb://erp_user:erp_password@localhost:27017/erp_logs"

# Server Configuration
NODE_ENV=development
PORT=3001
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Analytics Service
ANALYTICS_SERVICE_URL=http://localhost:8000

# Company Configuration
COMPANY_NAME=Your Company Name
COMPANY_ADDRESS=Your Company Address
COMPANY_PHONE=Your Company Phone
COMPANY_EMAIL=contact@yourcompany.com
COMPANY_TAX_ID=Your Tax ID