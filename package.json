{
  "name": "enterprise-erp-system",
  "version": "1.0.0",
  "description": "Modular Enterprise Resource Planning (ERP) System",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\" \"npm run analytics:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "analytics:dev": "cd analytics && python manage.py runserver",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "test": "jest",
    "setup": "npm install && cd client && npm install && cd ../analytics && pip install -r requirements.txt"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^2.3.1",
    "csv-parser": "^3.0.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.13.0",
    "qrcode": "^1.5.3",
    "sharp": "^0.32.1",
    "socket.io": "^4.7.2",
    "twilio": "^4.14.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "concurrently": "^8.2.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "prisma": "^6.13.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "erp",
    "pos",
    "inventory",
    "accounting",
    "enterprise"
  ],
  "author": "Enterprise ERP Team",
  "license": "MIT"
}
